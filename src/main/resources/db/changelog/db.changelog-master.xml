<?xml version="1.0" encoding="UTF-8"?>

<databaseChangeLog xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
                   xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                   xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.2.xsd"
                   logicalFilePath="classpath:/db/changelog/db.changelog-master.xml">

    <changeSet id="1" author="jh">

        <createTable tableName="measure">
            <column name="id" type="BIGINT" autoIncrement="true">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="diagnosis_id" type="VARCHAR(255)">
                <constraints nullable="false"/>
            </column>
            <column name="diagnosis_text" type="VARCHAR(255)">
                <constraints nullable="false"/>
            </column>
            <column name="version" type="VARCHAR(255)">
                <constraints nullable="false"/>
            </column>
        </createTable>

        <createTable tableName="measure_priorities">
            <column name="measure_id" type="BIGINT">
                <constraints nullable="false"/>
            </column>
            <column name="priorities_id" type="BIGINT">
                <constraints nullable="false" unique="true"/>
            </column>
        </createTable>

        <createTable tableName="priority">
            <column name="id" type="BIGINT" autoIncrement="true">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="priority" type="INTEGER">
                <constraints nullable="false"/>
            </column>
            <column name="recommendation_id" type="BIGINT">
                <constraints nullable="false"/>
            </column>
        </createTable>

        <createTable tableName="recommendation">
            <column name="id" type="BIGINT" autoIncrement="true">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="recommendation_text" type="VARCHAR(255)">
                <constraints primaryKey="true" nullable="false"/>
            </column>
        </createTable>

        <addForeignKeyConstraint constraintName="measure_priorities_fk"
                                 baseTableName="measure_priorities"
                                 baseColumnNames="measure_id"
                                 referencedTableName="measure"
                                 referencedColumnNames="id"
                                 onDelete="CASCADE"/>

        <addForeignKeyConstraint constraintName="priorities_measure_fk"
                                 baseTableName="measure_priorities"
                                 baseColumnNames="priorities_id"
                                 referencedTableName="priority"
                                 referencedColumnNames="id"/>

        <addForeignKeyConstraint constraintName="priority_recommendation_fk"
                                 baseTableName="priority"
                                 baseColumnNames="recommendation_id"
                                 referencedTableName="recommendation"
                                 referencedColumnNames="id"/>

    </changeSet>

</databaseChangeLog>
