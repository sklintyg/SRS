#!groovy

stage('checkout srs') {
    node {
        git url: "https://github.com/sklintyg/srs.git", branch: GIT_BRANCH
        util.run { checkout scm }
    }
}

stage('build') {
    node {
        dir("performanceTests") {
            sh("./gradlew build")
        }
    }
}

stage('gatling') {
    node {
        dir("performanceTest") {
            try {
                sh("./gradlew gatling -DbaseUrl=${BASE_URL}")
            } finally {
                gatlingArchive()
            }
        }
    }
}
