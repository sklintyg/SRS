#!groovy

stage('checkout srs') {
    node {
        git url: "https://github.com/sklintyg/srs.git", branch: GIT_BRANCH
        util.run { checkout scm }
    }
}

stage('build') {
    node {
        dir("performanceTests") {
            sh("../gradlew build")
        }
    }
}

stage('gatling') {
    node {
        dir("performanceTests") {
            try {
                sh("../gradlew gatling -Dcertificate.baseUrl=http://localhost:8080")
            } finally {
                gatlingArchive()
            }
        }
    }
}
