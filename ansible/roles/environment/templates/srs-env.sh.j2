ENV_CFG="-Dspring.profiles.active={{ profiles }}"
JVM_CFG="-Xms1024m -Xmx1024m -Dfile.encoding=UTF-8"
DEBUG_CFG="-XX:-HeapDumpOnOutOfMemoryError -XX:HeapDumpPath={{ inera_tomcat_folder }}"
SRS_CFG="-Dsrs.config.folder={{ config_etc_folder }} -Dsrs.config.file={{ config_etc_folder }}/srs.properties -Dsrs.log.file={{ config_etc_folder }}/log4j2..xml
export JAVA_OPTS="$JAVA_OPTS $ENV_CFG $JVM_CFG $DEBUG_CFG $SRS_CFG"
